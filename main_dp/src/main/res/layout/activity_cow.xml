<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Cowview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:columnCount="3"
        android:orientation="horizontal">
        <Button
            android:id="@+id/CowmeatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/meat"
            android:autoSizeTextType="uniform"
            android:text="소고기"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#00FF0000" />
        <Button
            android:id="@+id/CowcutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/meat"
            android:autoSizeTextType="uniform"
            android:text="다진소고기"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#00FF0000" />
        <Button
            android:id="@+id/CowtailButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/meat"
            android:autoSizeTextType="uniform"
            android:text="소꼬리"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#00FF0000" />
        <Button
            android:id="@+id/CowanshimButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/meat"
            android:autoSizeTextType="uniform"
            android:text="소고기안심"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#00FF0000" />
        <Button
            android:id="@+id/CowdungshimButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/meat"
            android:autoSizeTextType="uniform"
            android:text="소고기등심"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#00FF0000" />
        <Button
            android:id="@+id/CowheadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/meat"
            android:autoSizeTextType="uniform"
            android:text="양지머리"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#00FF0000" />
        <Button
            android:id="@+id/CowbloodButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/meat"
            android:autoSizeTextType="uniform"
            android:text="선지"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#00FF0000" />
    </GridLayout>
</LinearLayout>