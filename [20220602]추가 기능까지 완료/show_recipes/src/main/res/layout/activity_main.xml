<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">

        <GridLayout
            android:id="@+id/country"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:rowCount="5"
            android:orientation="vertical"
            >

            <CheckBox
                android:id="@+id/korea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="한식"
                tools:layout_editor_absoluteX="22dp"
                tools:layout_editor_absoluteY="60dp" />

            <CheckBox
                android:id="@+id/china"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="중식"
                tools:layout_editor_absoluteX="22dp"
                tools:layout_editor_absoluteY="119dp" />

            <CheckBox
                android:id="@+id/japan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="일식"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="181dp" />

            <CheckBox
                android:id="@+id/western"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="양식"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="181dp" />

            <CheckBox
                android:id="@+id/etc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="기타"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="181dp" />

        </GridLayout>

        <GridLayout
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/easy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="쉬움"
                tools:layout_editor_absoluteX="22dp"
                tools:layout_editor_absoluteY="60dp" />

            <CheckBox
                android:id="@+id/normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="보통"
                tools:layout_editor_absoluteX="22dp"
                tools:layout_editor_absoluteY="119dp" />

            <CheckBox
                android:id="@+id/hard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어려움"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="181dp" />
        </GridLayout>

        <GridLayout
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/short_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="~30분"
                tools:layout_editor_absoluteX="22dp"
                tools:layout_editor_absoluteY="60dp" />

            <CheckBox
                android:id="@+id/middle_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30분~60분"
                tools:layout_editor_absoluteX="22dp"
                tools:layout_editor_absoluteY="119dp" />

            <CheckBox
                android:id="@+id/long_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="60분~"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="181dp" />
        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/rec_2_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추천 받기" />

    </LinearLayout>


<!--    만들 수 있는 총 레시피 개수 출력 기능-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/total_recipe_cnt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 0개의 레시피가 검색되었습니다."
            android:layout_marginLeft="10dp"
            android:layout_marginTop="45dp"/>

    </LinearLayout>

